<div class="mx-auto px-4">
  <div class="mx-auto my-2 text-center border-2 text-uppercase">
    <h1>Tienda</h1>
  </div>
  <div class="containerProducts">
    <div class="sidebar">
      <div class="logo text-center">Sport Plus</div>
      <form action="/products" method="GET">
        <input type="text" id="txtSearch" name="title" placeholder="Buscar producto..." />
      </form>

      <h3 class="d-none d-sm-block">Categoría</h3>
      <ul class="category-list text-capitalize d-none d-sm-block">
        <li id="allCategory"><a href="/products">Todos</a></li>
        {{#each categories}}
          <li id="category_{{this}}"><a href="/products?category={{this}}">{{this}}</a></li>
        {{/each}}
      </ul>
    </div>

    <div class="row text-center no-selection">
      <div class="d-flex justify-content-end mb-3">
        <select id="sortSelect" class="form-select anchoAuto">
          <option selected disabled>Ordenar</option>
          <option value="asc">Precio: Menor a Mayor</option>
          <option value="desc">Precio: Mayor a Menor</option>
        </select>
      </div>
      {{#if payload}}
        {{#each payload}}
          <article class="col-6 col-xl-3 col-lg-4">
            <div class="tarjeta thumb-wrapper">
              <figure>
                <div class="image-container">
                  {{#if thumbnails}}
                    <img class="card-img" src="img/products/{{thumbnails}}" alt="{{title}}" />
                  {{else}}
                    <img class="card-img" src="img/products/noThumbnails.webp" alt="{{title}}" />
                  {{/if}}
                  <div class="mask"></div>
                  <figcaption>
                    <a href="/products/item/{{_id}}" class="btn btn-effect btn-dark btn-jif bg-black btn-detalles">Ver Detalles</a>
                  </figcaption>
                </div>
              </figure>
              <p>{{title}}</p>
              <p>${{price}}</p>
            </div>
          </article>
        {{/each}}
      {{else}}
        <h1 class="text-center md:mt-12 text-lg">No hay productos</h1>
      {{/if}}
    </div>
  </div>

  <div style="position:relative" class="container d-flex justify-content-center align-items-center gap-4 p-4">
    {{#if hasPrevPage}}
      <a style="position:relative" class="btn button-black prev px-5" href="{{prevLink}}">
        <div class="arrow"><span></span><span></span></div>Atrás
      </a>
    {{/if}}
    {{#if hasNextPage}}
      <a class="btn button-black next px-5" href="{{nextLink}}">Siguiente</a>
    {{/if}}
    <h3>Página: {{page}}/{{totalPages}}</h3>
  </div>
</div>

<!-- Scripts necesarios -->
<script src="/js/productScript.js"></script>